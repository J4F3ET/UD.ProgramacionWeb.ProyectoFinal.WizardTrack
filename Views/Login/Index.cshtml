@{ ViewData["Title"] = "Index"; Layout = null; }
<!DOCTYPE html>
<html lang="en" class="">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;500;600&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="shortcut icon" href="~/assets/icons/icono.ico" />
		<link rel="stylesheet" href="~/css/output.css" />
		<title>WizardTrack</title>
	</head>
	<body class="bg-light-bg-200 dark:bg-dark-bg-200">
		<div class="row">
			<h1 class="display-1 text-center">Bienvenido a WizardTrack</h1>
		</div>
		<section
			id="section_sign_up"
			class="hidden w-full h-screen  flex flex-nowrap justify-center items-center"
		>
			<div>
				<figure class="w- h-5/6 overflow-hidden object-cover">
					<img
						class="h-full rounded-2xl"
						src="~/assets/img/Logo.png"
						alt=""
						/>
				</figure>
			</div>
			<form
				class="w-1/3 h-5/6 p-8 flex justify-evenly flex-col"
			>
				<h1
					class="text-light-text-100 font-Quicksand font-extrabold text-2xl align-text-top dark:text-dark-acent-200"
				>
					Crea una cuenta
				</h1>
				<div class="flex justify-center flex-col gap-4">
					<input
						type="text"
						id="txtNameRegistro"
						placeholder="Nombre"
						name="nombre"
						maxlength="50"
						required
						class="w-72 h-12 font-Quicksand rounded-lg"
					/>
					<input
						type="password"
						id="txtPasswordRegistro"
						placeholder="Contraseña"
						name="contraseña"
						minlength="5"
						maxlength="20"
						required
						class="w-72 h-12 font-Quicksand rounded-lg"
					/>
					<input
						type="email"
						id="txtEmailRegistro"
						placeholder="Correo"
						name="correo"
						minlength="8"
						maxlength="20"
						required
						class="w-72 h-12 font-Quicksand rounded-lg"
					/>
				</div>
				<div class="flex justify-center flex-col gap-4">
					<button type="button" id="sign_up_registrar" class="primary-button">
						Crear cuenta
					</button>
					<button
						type="button"
						id="sign_up_iniciar"
						onclick="loginPage()"
						class="primary-button">
						Inicia sesión
					</button>
				</div>
			</form>
		</section>
		<section
			id="section_log_in"
			class="w-full h-screen  flex flex-nowrap justify-center items-center"
		>
			<div>
				<figure class="w- h-5/6 overflow-hidden object-cover">
					<img
						class="h-full rounded-2xl"
						src="~/assets/img/Logo.png"
						alt=""
						/>
				</figure>
			</div>
			<form
				class="w-1/3 h-5/6 p-8 flex justify-evenly flex-col"
			>
				<h1
					class="text-light-text-100 font-Quicksand font-extrabold text-2xl align-text-top dark:text-dark-acent-200"
				>
					Inicia sesión
				</h1>
				<div class="flex justify-center flex-col gap-4">
					<input
						type="email"
						id="txtEmailLogin"
						class="w-72 h-12 font-Quicksand rounded-lg"
						name="nombre_usuario"
						placeholder="Correo"
						required
					/>
					<input
						type="password"
						id="txtPasswordLogin"
						class="w-72 h-12 font-Quicksand rounded-lg"
						placeholder="Contraseña"
						name="contraseña"
						required
					/>
				</div>
				<div class="flex justify-center flex-col gap-4">
					<button type="button" id="log_in_iniciar" class="primary-button">
						Inicia sesión
					</button>
					<button
						type="button"
						id="log_in_registrar"
						onclick="signUpPage()"
						class="primary-button">
						Registrate
					</button>
				</div>
			</form>
		</section>
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
		<script src="~/js/nodes.js"></script>
		<script src="~/js/reseleaseHiddenButtons.js"></script>
		<script src="~/js/sessionFetch.js"></script>
	</body>
</html>
